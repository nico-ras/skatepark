
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Administración</h2>
      <hr class="w-50" />

      <table class="table w-50 m-auto">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
          </tr>
        </thead>
        <tbody>
 
          {{#each skaters}}

          <tr>
            <th scope="row">{{@index}}</th>
            <td><div class="container-fluid"><img class="profileImg" src="/imgs/{{this.foto}}"></div></td>
            <td>{{this.nombre}}</td>
            <td>{{this.anos_experiencia}}</td>
            <td>{{this.especialidad}}</td>
            <td><input type="checkbox" {{#if this.estado}} checked {{/if}} onclick="changeStatus({{this.id}}, this)" ></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  
  <script>
    const changeStatus = async (id, e) => {
      const auth = e.checked
      try {
        await axios.put("/registro", {
        id,
        auth
      })
      alert(auth ? "Usuario aceptado": "Usuario en revision")
      } catch ({ response }) {
         const { data } = response
         const { error } = data
         alert(error)
      }
      
      
    }
  </script>