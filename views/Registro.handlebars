<h1>Skate Park</h1>

<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50" />

  <form id="form" action="" method="" enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input id="regEmail" name="email" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input id="regNombre" name="nombre" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input id="regPassword" type="password" name="password" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input id="confPassword" type="password" class="form-control m-auto" onchange="equPass()"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input id="regExp" name="experiencia" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input
          id="regEspecialidad"
          name="especialidad"
          class="form-control m-auto"
        />
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil</label>
        <input id="foto" type="file" name="foto" />
      </div>
    </div>
    <button onclick=""
      class="btn btn-info mb-3"
      id="registrationButton"
    >Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>
</div>

<script>
  

  const equPass = () => {
    const pass = document.getElementById('regPassword')
    const confpass = document.getElementById('confPassword')
    const form = document.getElementById('form')
    
    if (pass.value != confpass.value) {
      confpass.focus()
      form.action = ""
      form.method =""
      alert("El password ingresado no es igual en ambos campos")
    } else {
      form.action ="/registro"
      form.method ="POST"
    }
  }
</script>

