
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Datos del perfil</h2>
      <hr class="w-50" />

      <form>
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input
              id="email"
              class="form-control m-auto"
              disabled
              value={{email}}
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input id="nombre" class="form-control m-auto" value={{nombre}} />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input
              type="password"
              id="password"
              class="form-control m-auto"
              value={{password_}}
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input
              type="password"
              class="form-control m-auto"
              value={{password_}}
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>AÃ±os de experiencia</label>
            <input id="experiencia" class="form-control m-auto" value={{anos_experiencia}} />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input id="especialidad" class="form-control m-auto" value={{especialidad}} />
          </div>
        </div>
        <div class="mb-1">
          <button id="edit" class="btn btn-primary">Actualizar</button>
        </div>
        <div>
          <button id="delete" class="btn btn-danger">Eliminar cuenta</button>
        </div>
      </form>
    </div>

    <script>
      
      const editBtn = document.getElementById("edit")
      const deleteBtn = document.getElementById("delete")

      editBtn.addEventListener('click', async (e) => {
        e.preventDefault()
        edit()
      })

      deleteBtn.addEventListener('click', async (e) => {
        e.preventDefault()
        deleteUser()
      })

    const edit = async () => {
      const nombre = document.getElementById('nombre').value
        const password = document.getElementById('password').value
        const experiencia = document.getElementById('experiencia').value
        const especialidad = document.getElementById('especialidad').value
        const email = document.getElementById('email').value
        console.log(nombre, password, experiencia, especialidad, email)
      
      try {
        await axios.put("/editUser", {
          email,
          nombre, 
          password, 
          experiencia, 
          especialidad, 
        })
        alert("Usuario editado con exito!")
        window.location.href = "/"
      } catch ({ response }) {
         const { data } = response
         const { error } = data
         alert(error)
      } 
    }

    const deleteUser = async () => {
      const email = document.getElementById('email').value
      try {
        await axios.delete("/deleteUser", {
        data: {
          email: email,
            },
        })
          alert("Usuario eliminado!")
         window.location.href = "/"
        
      } catch (e) {
        alert(`Error: ${e}`)
      }
    }

    
      
    </script>
  